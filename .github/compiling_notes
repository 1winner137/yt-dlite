#GUI
pyinstaller --onefile --windowed --clean --strip .\yt-dlite.py - windows
pyinstaller --onefile --windowed --clean --name yt-lite ./yt-dlite.py - unix/debian
you can add --icon=myicon.ico if you have one

#Non-GUI
pyinstaller --onefile  --clean --strip .\yt-dlitec.py - windows
pyinstaller --onefile  --clean --strip --name yt-lite4terminal ./yt-dlitec.py - unix/debian
