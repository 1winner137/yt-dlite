#GUI
pyinstaller --onefile --windowed --clean --strip .\yt-liteg.py - windows
pyinstaller --onefile --windowed --clean --name yt-liteg ./yt-liteg.py - unix/debian
you can add --icon=myicon.ico if you have one

#Non-GUI
pyinstaller --onefile  --clean --strip .\yt-lite.py - windows
pyinstaller --onefile  --clean --strip --name yt-liteg ./yt-lite.py - unix/debian
